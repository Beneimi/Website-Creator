{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "ES2021",
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "esModuleInterop": true
}